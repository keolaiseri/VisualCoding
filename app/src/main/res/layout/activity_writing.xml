<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="writing.WritingActivity">

    <com.keola.visualcoding.writing.WritingView
        android:id="@+id/writingView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/writingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:text="#text. style \n{"
        android:textAppearance="@style/ready_to_st" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_below="@+id/writingText"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shapeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text:"
            android:textAppearance="@style/ready_to_st" />

        <EditText
            android:id="@+id/inputField"
            android:layout_width="215dp"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:hint="Enter text here" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="6dp">


        <TextView
            android:id="@+id/writingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="color:"
            android:textAppearance="@style/ready_to_st" />

        <EditText
            android:id="@+id/writingColorInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/sfpronormal"
            android:hint="Enter color hex code" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="6dp">


        <TextView
            android:id="@+id/writingSizeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="size:"
            android:textAppearance="@style/ready_to_st" />

        <EditText
            android:id="@+id/writingSizeInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/sfpronormal"
            android:hint="Enter value (1-10)" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="6dp">


        <TextView
            android:id="@+id/fillLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fill:"
            android:textAppearance="@style/ready_to_st" />

        <Spinner
            android:id="@+id/fillSpinner"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



</LinearLayout>

    <Button
        android:id="@+id/continue_writing_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:background="@drawable/button"
        android:drawableStart="@drawable/checkmark"
        android:fontFamily="@font/sfpronormal"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:text="Complete"
        android:textAppearance="@style/label"
        />



</LinearLayout>